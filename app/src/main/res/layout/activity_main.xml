<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/bMainLabel"
        android:layout_width="272dp"
        android:layout_height="238dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/mont"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="196sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494"
        tools:text="s" />

    <TextView
        android:id="@+id/bSubLabel"
        android:layout_width="289dp"
        android:layout_height="41dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_medium"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bMainLabel"
        tools:text="ALLAH" />

    <TextView
        android:id="@+id/bStopLabel"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/bMainLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bTextInput"
        app:layout_constraintVertical_bias="1.0"
        tools:text="ALLAH" />

    <TextView
        android:id="@+id/bTimerLabel"
        android:layout_width="266dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#AAAAAA"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bSubLabel" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/bTextInput"
        android:layout_width="297dp"
        android:layout_height="66dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto"
        android:hint="Ponga aqui su parada"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>